{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "types": ["chrome"],
    "lib": ["es6", "dom"]
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
