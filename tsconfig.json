{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": false,
    "types": ["node", "chrome", "react", "react-dom"],
    "lib": ["es6", "dom"]
  },
  "include": ["./src/*"],
  "exclude": ["dist", "node_modules", "webpack.config.js"]
}
